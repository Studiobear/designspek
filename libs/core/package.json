{
  "name": "@studiobear/designspek",
  "version": "0.5.0",
  "description": "A Reactive Design System: Svelte meets System UI",
  "source": "src/index.ts",
  "main": "dist/index.js",
  "module": "dist/index.modern.js",
  "umd:main": "dist/index.umd.js",
  "types": "dist/index.d.ts",
  "files": [
    "docs/assets/ds-horiz-fat.svg",
    "dist/**.js*",
    "dist/**/*.ts",
    "README.md"
  ],
  "author": "Barry Low <barry@studiobear.co>",
  "license": "MIT",
  "sideEffects": false,
  "scripts": {
    "build": "NODE_ENV=production yarn test && yarn clean && yarn microbundle --compress && yarn bundlesize",
    "dev": "NODE_ENV=development yarn microbundle watch",
    "clean": "rm -rf dist",
    "prepublishOnly": "yarn build",
    "bundlesize": "bundlesize",
    "lint": "prettier --check 'src/**/*.{ts,js}'",
    "lint:fix": "prettier --write 'src/**/*.{ts,js}'",
    "test": "jest src",
    "test:watch": "yarn test --watch"
  },
  "bundlesize": [
    {
      "path": "./dist/index.js",
      "maxSize": "10 Kb",
      "compression": "brotli"
    }
  ],
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "**/*.{js,ts,json,md}": [
      "prettier --write",
      "git add"
    ]
  },
  "devDependencies": {
    "@babel/core": "^7.12.3",
    "@babel/preset-env": "^7.12.3",
    "@types/jest": "^26.0.14",
    "@types/styled-system": "^5.1.10",
    "babel-jest": "^26.3.0",
    "bundlesize": "^0.18.0",
    "compass-vertical-rhythm": "^1.4.5",
    "csstype": "^3.0.3",
    "goober": "^2.0.5",
    "husky": "^4.3.0",
    "lint-staged": "^10.4.0",
    "micro-memoize": "^4.0.9",
    "microbundle": "^0.12.3",
    "modularscale": "^2.0.1",
    "prettier": "^2.1.2",
    "prettier-plugin-svelte": "^1.4.0",
    "styled-system": "^5.1.5",
    "ts-jest": "^26.4.3",
    "typescript": "^4.0.5",
    "typography-theme-st-annes": "^0.16.19"
  },
  "dependencies": {
    "svelte": "^3.29.4"
  }
}
